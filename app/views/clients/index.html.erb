

<h1>Clients</h1>

<table class="table table-striped" id="unseen">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Date naissance</th>
            <th>Téléphone</th>
            <th>Adresse</th>
            <th>Code postal</th>
            <th>Courriel</th>
            <th style="display: none;">Mot de passe</th>
            <th>Type de client</th>
            <th colspan="3" style="text-align: center;">Actions</th>

        </tr>
    </thead>
    <tbody>
    <% @clients.each do |client| %>
        <tr>
            <td><%= client.name %></td>
            <td><%= client.dateOfBirth %></td>
            <td><%= client.phoneNumber %></td>
            <td><%= client.address %></td>
            <td><%= client.zipCode %></td>
            <td><%= client.emailAddress %></td>
            <td style="display: none;"><%= client.password %></td>
            <td><%= client.clientType %></td>
            <td><%= link_to 'Détails', client %></td>
            <td><%= link_to 'Modifier', edit_client_path(client) %></td>
            <td><%= link_to 'Supprimer', client, method: :delete, data: { confirm: 'Êtes-vous certain?' } %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br />

<%= link_to 'Nouveau client', new_client_path %>
